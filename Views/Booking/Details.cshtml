@model EventEase.Models.Booking

@{
    ViewData["Title"] = "Booking Details";
}

<h1 class="mb-4">Booking Details</h1>
<hr />

<dl class="row">
    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.StartDate)</dt>
    <dd class="col-sm-9">@Model.StartDate.ToString("yyyy-MM-dd HH:mm")</dd>

    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.EndDate)</dt>
    <dd class="col-sm-9">@Model.EndDate.ToString("yyyy-MM-dd HH:mm")</dd>

    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.BookingReference)</dt>
    <dd class="col-sm-9">@Model.BookingReference</dd>

    <dt class="col-sm-3">Event</dt>
    <dd class="col-sm-9">@Model.Event?.Name ?? "No Event Linked"</dd>

    <dt class="col-sm-3">Venue</dt>
    <dd class="col-sm-9">@Model.Venue?.Name ?? "No Venue Linked"</dd>
</dl>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
</div>
