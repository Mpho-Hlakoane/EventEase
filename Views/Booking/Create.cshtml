@model EventEase.Models.Booking

@{
    ViewData["Title"] = "Create Booking";
}

<h1 class="mb-4">Create Booking</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Event Dropdown -->
            <div class="form-group mb-3">
                <label asp-for="EventId" class="form-label">Event</label>
                <select asp-for="EventId" class="form-select" asp-items="ViewBag.EventId">
                    <option value="">-- Select Event --</option>
                </select>
                <span asp-validation-for="EventId" class="text-danger"></span>
            </div>

            <!-- Venue Dropdown -->
            <div class="form-group mb-3">
                <label asp-for="VenueId" class="form-label">Venue</label>
                <select asp-for="VenueId" class="form-select" asp-items="ViewBag.VenueId">
                    <option value="">-- Select Venue --</option>
                </select>
                <span asp-validation-for="VenueId" class="text-danger"></span>
            </div>

            <!-- Start Date -->
            <div class="form-group mb-3">
                <label asp-for="StartDate" class="form-label">Start Date</label>
                <input asp-for="StartDate" class="form-control" type="datetime-local"
                       value="@(Model.StartDate != default ? Model.StartDate.ToString("yyyy-MM-ddTHH:mm") : null)" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <!-- End Date -->
            <div class="form-group mb-3">
                <label asp-for="EndDate" class="form-label">End Date</label>
                <input asp-for="EndDate" class="form-control" type="datetime-local"
                       value="@(Model.EndDate != default ? Model.EndDate.ToString("yyyy-MM-ddTHH:mm") : null)" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <!-- Booking Reference -->
            <div class="form-group mb-4">
                <label asp-for="BookingReference" class="form-label">Booking Reference</label>
                <input asp-for="BookingReference" class="form-control" readonly />
                <span asp-validation-for="BookingReference" class="text-danger"></span>
            </div>

            <!-- Submit -->
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
