@model EventEase.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<h1 class="mb-3 text-danger">Delete Booking</h1>

<h4 class="text-warning">Are you sure you want to delete this booking?</h4>

<hr />

<div class="mb-4">
    <h5 class="fw-bold">Booking Details</h5>
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.StartDate)</dt>
        <dd class="col-sm-9">@Model.StartDate.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.EndDate)</dt>
        <dd class="col-sm-9">@Model.EndDate.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.BookingReference)</dt>
        <dd class="col-sm-9">@Model.BookingReference</dd>

        <dt class="col-sm-3">Event</dt>
        <dd class="col-sm-9">@Model.Event?.Name ?? "No Event Available"</dd>

        <dt class="col-sm-3">Venue</dt>
        <dd class="col-sm-9">@Model.Venue?.Name ?? "No Venue Available"</dd>
    </dl>
</div>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
