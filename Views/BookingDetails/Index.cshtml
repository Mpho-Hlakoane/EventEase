@model IEnumerable<BookingDetailsView>

@{
    ViewData["Title"] = "Booking Details";
}

<h1>Booking Details</h1>

<form asp-action="Index" method="get" class="mb-3">
    <input type="text" name="searchString" value="@ViewContext.HttpContext.Request.Query["searchString"]" placeholder="Search by Booking ID or Event Name" class="form-control" />
    <button type="submit" class="btn btn-primary mt-2">Search</button>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Booking ID</th>
            <th>Reference</th>
            <th>Booking Start</th>
            <th>Booking End</th>
            <th>Event Name</th>
            <th>Event Dates</th>
            <th>Venue Name</th>
            <th>Venue Location</th>
            <th>Venue Capacity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BookingId</td>
                <td>@item.BookingReference</td>
                <td>@item.StartDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@item.EndDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@item.EventName</td>
                <td>@item.EventStartDate.ToString("yyyy-MM-dd") - @item.EventEndDate.ToString("yyyy-MM-dd")</td>
                <td>@item.VenueName</td>
                <td>@item.VenueLocation</td>
                <td>@item.VenueCapacity</td>
            </tr>
        }
    </tbody>
</table>
