@model IEnumerable<EventEase.Models.Venue>
@{
    ViewData["Title"] = "Venues";
}

<h1>Venues</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Venue</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">No venues available.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Location</th>
                    <th>Capacity</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var venue in Model)
                {
                    <tr>
                        <td>@venue.Name</td>
                        <td>@venue.Location</td>
                        <td>@venue.Capacity</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@venue.VenueId" class="btn btn-info btn-sm" title="View Details">Details</a>
                            <a asp-action="Edit" asp-route-id="@venue.VenueId" class="btn btn-warning btn-sm" title="Edit Venue">Edit</a>
                            <a asp-action="Delete" asp-route-id="@venue.VenueId" class="btn btn-danger btn-sm" title="Delete Venue">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
