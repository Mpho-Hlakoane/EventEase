@model IEnumerable<EventEase.Models.Event>

@{
    ViewData["Title"] = "Events";
}

<h1>All Events</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Event</a>
</p>

@if (!Model.Any())
{
    <p>No events found.</p>
}
else
{
    var firstEvent = Model.First();
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => firstEvent.Name)</th>
                <th>@Html.DisplayNameFor(m => firstEvent.StartDate)</th>
                <th>@Html.DisplayNameFor(m => firstEvent.EndDate)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@item.StartDate.ToString("g")</td>
                    <td>@item.EndDate.ToString("g")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
