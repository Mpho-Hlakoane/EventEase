@model EventEase.Models.Event

@{
    ViewData["Title"] = "Delete Event";
}

<h1>Delete Event</h1>

<h3 class="text-danger">Are you sure you want to delete this event?</h3>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Name)</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.StartDate)</dt>
        <dd class="col-sm-10">@Model.StartDate.ToString("f")</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.EndDate)</dt>
        <dd class="col-sm-10">@Model.EndDate.ToString("f")</dd>

        @if (!string.IsNullOrWhiteSpace(Model.Description))
        {
            <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Description)</dt>
            <dd class="col-sm-10">@Model.Description</dd>
        }

        @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
        {
            <dt class="col-sm-2">Image</dt>
            <dd class="col-sm-10">
                <img src="@Model.ImageUrl" alt="Event Image" class="img-thumbnail" style="max-width: 300px;" />
            </dd>
        }
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </form>
</div>
